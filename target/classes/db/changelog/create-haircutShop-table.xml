<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="postgres">
        <createSequence schemaName="public" startValue="1" incrementBy="1" sequenceName="seq_haircutShop"/>
        <createTable tableName="haircutShop" remarks="A table to contain all haircutShop">
            <column name="haircut_shop_id" type="int" defaultValueSequenceNext="seq_users">
                <constraints nullable="false" unique="true" primaryKey="true" primaryKeyName="pk_haircutShop"/>
            </column>
            <column name="haircut_shop_name" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="haircut_shop_address" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="haircut_shop_phone_number" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="haircut_shop_email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="haircut_shop_work_time" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="haircut_shop_prices" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="haircut_shop_password" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
